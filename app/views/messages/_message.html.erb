<div id="message-<%= message.id %>">
  <small>
    <strong><%= message.user.nickname %></strong>
  </small>
  <p><%= message.content %></p>
  <p class="text-end mb-0 fw-lighter"><%= message.created_at.strftime("%b %e at %l:%M %p") %></p>
</div class="mb-1">
<% if message.user.photo.attached? %>
  <%= cl_image_tag message.user.photo.key, transformation: [height: 50, width: 50, crop: :fill, radius: "max"], class: "avatar message-avatar" %>
<% end %>
