<div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
  <div class="container">
    <div class="row">
      <div class="col col1">
        <div class="info">
          <h1><i class="fa-regular fa-arrow-left"></i> <strong><%= project.title %></strong> </h1>
              <% if current_user.liked? project %>
              <%= link_to downvote_project_path(project), data: {turbo_method: :post} do %>
                <p class=""><i class="fa-solid fa-thumbs-up"></i></p>
              <% end %>
              <% else %>
              <%= link_to upvote_project_path(project), data: {turbo_method: :post} do %>
                <p class=""><i class="fa-regular fa-thumbs-up"></i></p>
              <% end %>
              <% end %>

        </div>
        <div class="description">
                <% project.tags.each do |tag| %>
                  <p class="tag"><%= tag %> </p>
                <% end %>
          <p class="address">
            <i class="fa-regular fa-location-dot"></i> <%= project.address %>
          </p>
          <p class="details">
            <%= project.description %>
          </p>
        </div>
        <div class="creator">
          <p>Project by:</p>
          <% if project.user.photo.attached? %>
            <%= cl_image_tag project.user.photo.key, class: "avatar" %>
          <% end %>
        </div>
      </div>

      <div class="col col2">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
              <% project.photos.each do |photo| %>
                <div class="carousel-item active">
                  <%# <img src="..." class="d-block w-100" alt="..."> %>
                    <%= cl_image_tag photo.key, height: 400, resize: :fill %>
                </div>
              <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
