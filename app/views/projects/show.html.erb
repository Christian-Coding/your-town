<div class="formcardshow">
  <ul class="nav nav-pills nav-justified mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Details</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="pills-chatroom-tab" data-bs-toggle="pill" data-bs-target="#pills-chatroom" type="button" role="tab" aria-controls="pills-chatroom" aria-selected="false">Chatroom</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="pills-whiteboard-tab" data-bs-toggle="pill" data-bs-target="#pills-whiteboard" type="button" role="tab" aria-controls="pills-whiteboard" aria-selected="false">Whiteboard</button>
    </li>
  </ul>

  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
      <div class="container mt-5 ms-4">
        <div class="row">
            <h1><strong><%= @project.title %></strong></h1>
          <div class="col">
            <div class="carddetail">
              <% @project.tags.each do |tag| %>
                <p class="tag"><%= tag %> </p>
              <% end %>
              <h6 class="mt-4"><strong> Creator</strong></h6>
              <p> <%= @project.user.first_name %> <%= @project.user.last_name %></p>
              <h6 class="mt-4"><strong> Status</strong></h6>
              <p><%= @project.progress %></p>
              <h6 class="mt-4"><strong> Location</strong></h6>
              <p> <%= @project.address %></p>
            </div>
          </div>
        <div class="col">
          <h6 class="mt-4"><strong>Description</strong></h6>
          <p> <%= @project.description %></p>
          <h3 class="my-4"><strong>Supporters  üëçüèª : </strong><%= (@project.votes_for.size - @project.get_downvotes.size ) %> </h3>


          <%= link_to "Support", upvote_project_path(@project), data: {turbo_method: :post}, class: "btn btn-success"%>

          <% if current_user.voted_for? @project %>
            <%= link_to "Remove Support", downvote_project_path(@project), data: {turbo_method: :post}, class: "btn-remove"%>
          <% end %>
        </div>
      </div>
    </div>
    <div>
      <div class="d-flex justif-content-between pb-5 mt-5">
      <% @project.photos.each do |photo| %>
        <div class="imagecard">
          <%= cl_image_tag photo.key, height: 350, width: 690, crop: :fill %>
        </div>
      <% end %>
    </div>
  </div>
</div>
