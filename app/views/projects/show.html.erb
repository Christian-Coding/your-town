<div class="banner mt-5">

  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab" aria-controls="home" aria-selected="true">Details</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#projects" type="button" role="tab" aria-controls="profile" aria-selected="false">Projects</button>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">

    <div class="tab-pane fade show active" id="details" role="tabpanel" aria-labelledby="home-tab">
      <div class="container mt-5">
        <h1><strong><%= @project.title %></strong></h1>
        <div class="d-flex">


        </div>
        <h2 class="mt-4"><strong> Creator: </strong></h2>
        <h2><strong> Supporters: </strong></h2>
        <p class="mt-4">Description</p>
        <%= @project.description %>
      </div>

      <div class="mt-5" id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active d-flex justify-content-center">
              <img src="https://skyticket.com/guide/wp-content/uploads/2017/12/iStock-513055522-min-e1521430918488.jpg" class=" pictures d-block w-90" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://th.bing.com/th/id/OIP.5JJFW1tUgitAzQ5c8R6fegHaEj?pid=ImgDet&w=207&h=127&c=7&dpr=1,25" class=" pictures d-block w-90" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://th.bing.com/th/id/OIP.YuetXuT_6ghneYyKW5kJSAHaE8?pid=ImgDet&w=207&h=138&c=7&dpr=1,25" class=" pictures d-block w-90" alt="...">
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="tab-pane fade" id="projects" role="tabpanel" aria-labelledby="profile-tab">
      <div class="container mt-5">
        <h1><strong><%= @project.title %></strong></h1>
        <h2> Ideas? Comments? Feedback? - Get involved! </h2>

        <div class="container chatroom"
          data-controller="chatroom-subscription"
          data-chatroom-subscription-chatroom-id-value="<%= @project.chatroom.id %>"
        >

          <div class="messages" data-chatroom-subscription-target="messages">
            <% @project.chatroom.messages.each do |message| %>
              <%= render "messages/message", message: message %>
            <% end %>
          </div>

            <%= simple_form_for [@project.chatroom, Message.new],
                html: { data: { action: "turbo:submit-end->chatroom-subscription#resetForm" }, class: "d-flex" } do |f|
            %>
              <%= f.input :content,
                label: false,
                placeholder: "Message ##{@project.chatroom.name}",
                wrapper_html: {class: "flex-grow-1"}
              %>
              <%= f.submit "Send", class: "btn btn-primary mb-3" %>
            <% end %>
        </div>
      </div>
    </div>




</div>
