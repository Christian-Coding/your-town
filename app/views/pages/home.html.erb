<div class="home">
  <div class="search">
    <h1>Build the city you always dreamed of.</h1>
        <%= form_with url: "", method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Enter your City"
        %>
        <%= submit_tag "Search", class: "btn btn-secondary" %>
      <% end %>
  </div>
</div>
